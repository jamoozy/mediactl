{
  "manifest_version": 3,

  "name": "Media Control",
  "description": "Add basic media controls to any page with media on it.",
  "version": "0.2",

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Media Control",
    "default_popup": "popup.html"
  },

  "homepage_url": "https://github.com/jamoozy/mediactl",

  "background": {
    "service_worker": "eventPage.js"
  },

  "host_permissions": [ "<all_urls>" ],

  "permissions": [
    "scripting",
    "storage",
    "tabs"
  ]
}
